{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "./api.out",
		"rootDir": "./src",
		"lib": ["es2020"],
		"types": ["node"],
		"baseUrl": ".", // Required for paths to work
		"paths": {
			"@api/*": ["../api/*"],
			"@src/*": ["./src/*"],
			"@cdk/*": ["../cdk/*"]
		}
	},
	"exclude": [
		"../node_modules", "cdk.out", "cdk/cdk.out"
	]
}
