{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",  // Changed from "commonjs"
		"moduleResolution": "NodeNext",  // Changed from "Node16"
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["es2020"],
		"types": ["node"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,  // Still needed for Zod
		"baseUrl": ".",
		"paths": {
			"@api/*": ["./api/*"],
			"@src/*": ["./src/*"],
			"@cdk/*": ["./cdk/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "cdk.out"]
}
